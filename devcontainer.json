{
    "name": "Finance Project",
    "image": "mcr.microsoft.com/vscode/devcontainers/java",
    "features": {
        "ghcr.io/devcontainers/features/java": {
            "version": "17",
            "maven": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                // Add any VSCode extensions you need, for example:
                "vscjava.vscode-java-pack",
                "redhat.java"
            ]
        }
    },
    "postCreateCommand": "echo 'export JAVA_HOME=/usr/lib/jvm/java-17-openjdk-amd64' >> ~/.bashrc && echo 'export PATH=$JAVA_HOME/bin:$PATH' >> ~/.bashrc && source ~/.bashrc",
    "remoteUser": "vscode"
}
